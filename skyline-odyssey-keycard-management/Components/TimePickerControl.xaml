<UserControl x:Class="skyline_odyssey_keycard_management.Components.TimePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:skyline_odyssey_keycard_management.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ComboBox Width="50" ItemsSource="{Binding Hours}" SelectedIndex="0"/>
            <Label Content=":"/>
            <ComboBox Width="50" ItemsSource="{Binding Minutes}" SelectedIndex="0"/>
            <ComboBox Width="60" ItemsSource="{Binding AMPM}" SelectedIndex="0"/>
        </StackPanel>
    </Grid>
</UserControl>
